@using Microsoft.AspNetCore.Components.Web

@inherits LayoutComponentBase

<ErrorBoundary>
    <ChildContent>
        <div class="page">
            <div class="sidebar">
                <NavMenu/>
            </div>
            <main>
                <article class="content px-4">
                    @Body
                </article>
            </main>
        </div>
    </ChildContent>
    <ErrorContent Context="ex">
        <p>@ex.Message</p>
    </ErrorContent>
</ErrorBoundary>
